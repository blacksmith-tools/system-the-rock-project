<% include ../../partials/header.ejs %>

<div class="mdl-grid">
  <div class="mdl-layout-spacer"></div>
  <div class="mdl-card mdl-shadow--6dp">
    <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
      <h2 class="mdl-card__title-text">Editar usuário</h2>
    </div>
    <form method="post" action="/admin/users/<%= user._id %>">
      <div class="mdl-card__supporting-text">
        <div class="mdl-textfield mdl-js-textfield">
          <input class="mdl-textfield__input" type="text" name="name" value="<%= user.name %>">
          <label class="mdl-textfield__label">Nome</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield">
          <input class="mdl-textfield__input" type="text" name="email" value="<%= user.email %>">
          <label class="mdl-textfield__label">E-mail</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield">
          <input class="mdl-textfield__input" type="text" name="username" value="<%= user.username %>">
          <label class="mdl-textfield__label">Nome de usuário</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield">
          <input class="mdl-textfield__input" type="text" name="password" value="<%= user.password %>">
          <label class="mdl-textfield__label">Senha</label>
        </div>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" type="submit">Editar</button>
      </div>
    </form>
  </div>
  <div class="mdl-layout-spacer"></div>
</div>

<% include ../../partials/footer.ejs %>
